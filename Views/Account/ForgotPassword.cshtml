@model TodoListApp.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

<div class="auth-container">
    <div class="auth-card">
        <header>
            <h1>Reset Password</h1>
            <p class="auth-subtitle">Enter your email to receive a password reset link</p>
        </header>

        <form asp-action="ForgotPassword" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="example@domain.com" autocomplete="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-auth">Send Reset Link</button>
        </form>

        <div class="auth-footer">
            <p>Remembered your password? <a asp-action="Login">Back to Login</a></p>
        </div>
    </div>
</div>
