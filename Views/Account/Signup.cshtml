@model TodoListApp.ViewModels.SignupViewModel

@{
    ViewData["Title"] = "Sign Up";
}

<div class="auth-container">
    <div class="auth-card">
        <h2 data-translate="true">Create Account</h2>
        <p class="auth-subtitle" data-translate="true">Use your email to get started</p>

        <form asp-action="Signup" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FullName" data-translate="true">Full Name</label>
                <input asp-for="FullName" class="form-control" placeholder="John Doe" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" data-translate="true">Email</label>
                <input asp-for="Email" class="form-control" placeholder="example@domain.com" autocomplete="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Password" data-translate="true">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" data-translate="true">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-auth" data-translate="true">Sign Up</button>
        </form>

        <p class="auth-footer">
            <span data-translate="true">Already have an account?</span> <a asp-action="Login" data-translate="true">Login</a>
        </p>
    </div>
</div>

