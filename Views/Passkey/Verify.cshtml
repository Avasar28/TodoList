@{
    Layout = "_Layout";
    ViewData["Title"] = "Verify Passkey";
}

<div class="auth-wrapper fade-in">
    <div class="auth-card" style="max-width: 440px; margin: 4rem auto; text-align: center; background: var(--glass-bg); padding: 3rem; border-radius: 24px; border: var(--border-card); backdrop-filter: blur(20px); box-shadow: var(--shadow-card);">
        <div class="auth-icon-circle" style="margin-bottom: 2rem; width: 80px; height: 80px; background: rgba(110, 203, 198, 0.1); color: var(--accent-color); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-left: auto; margin-right: auto; box-shadow: 0 0 20px var(--accent-glow);">
            <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-lock"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
        </div>
        
        <h2 class="auth-hero-title" style="font-size: 2rem; font-weight: 700; color: var(--text-primary); margin-bottom: 0.5rem;" data-translate="true">Unlock Secure Module</h2>
        <p class="auth-hero-subtitle" style="color: var(--text-secondary); margin-bottom: 2.5rem;" data-translate="true">Authentication Options: PIN or Device Biometrics</p>

        <form asp-controller="Passkey" asp-action="ValidatePin" method="post" autocomplete="off">
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
            
            <div class="form-group mb-4">
                <input type="password" 
                       name="pin" 
                       class="form-control text-center passkey-input" 
                       placeholder="••••" 
                       maxlength="6" 
                       pattern="\d{4}|\d{6}" 
                       inputmode="numeric"
                       required 
                       autofocus 
                       style="font-size: 2.2rem; letter-spacing: 0.8rem; height: 4.5rem; background: rgba(0,0,0,0.2); border: 1px solid var(--glass-border); border-radius: 12px; color: var(--accent-color); transition: all 0.3s ease; width: 100%; box-sizing: border-box;"
                       oninput="this.value = this.value.replace(/[^0-9]/g, '')" />
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger mb-4" style="color: #f87171; background: rgba(248, 113, 113, 0.1); padding: 1rem; border-radius: 8px; font-size: 0.9rem; border: 1px solid rgba(248, 113, 113, 0.2);">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p class="mb-0">@error.ErrorMessage</p>
                    }
                </div>
            }

            <div class="form-actions" style="margin-top: 2rem;">
                <button type="submit" class="btn-primary" style="width: 100%; height: 3.5rem; font-size: 1.1rem; border-radius: 12px; font-weight: 600; cursor: pointer; background: var(--btn-primary-bg); color: var(--btn-primary-text); border: none; transition: transform 0.2s ease, box-shadow 0.2s ease;">Unlock Feature</button>
                <div style="margin-top: 1rem; text-align: center;">
                    <a asp-action="ForgotPin" asp-route-returnUrl="@ViewBag.ReturnUrl" style="color: var(--accent-color); text-decoration: none; font-size: 0.9rem; opacity: 0.7; transition: opacity 0.2s;" onmouseover="this.style.opacity='1'" onmouseout="this.style.opacity='0.7'">Forgot PIN?</a>
                </div>
            </div>
        </form>
        
        <div id="biometricSection" style="display: none;">
            <div style="margin: 1.5rem 0; display: flex; align-items: center; gap: 10px; opacity: 0.3;">
                <div style="flex: 1; height: 1px; background: var(--text-secondary);"></div>
                <span style="font-size: 0.8rem; text-transform: uppercase;" data-translate="true">OR</span>
                <div style="flex: 1; height: 1px; background: var(--text-secondary);"></div>
            </div>

            <button id="btnBiometricUnlock" class="btn-glow-accent" style="width: 100%; height: 3.5rem; font-size: 1.1rem; border-radius: 12px; font-weight: 600; cursor: pointer; background: transparent; color: var(--accent-color); border: 2px solid var(--accent-color); transition: all 0.3s ease; display: flex; align-items: center; justify-content: center; gap: 12px;">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-fingerprint"><path d="M2 12C2 6.477 6.477 2 12 2s10 4.477 10 10"></path><path d="M5 15c0-3.866 3.134-7 7-7s7 3.134 7 7"></path><path d="M8 20c0-2.209 1.791-4 4-4s4 1.791 4 4"></path><path d="M12 12v4"></path></svg>
                Use Face ID / Fingerprint
            </button>
        </div>

        <div class="mt-4" style="margin-top: 1.5rem;">
            <a href="/" class="btn-secondary" style="font-size: 0.9rem; color: var(--text-secondary); text-decoration: none; transition: color 0.2s ease;" data-translate="true">Cancel and Return Home</a>
        </div>
    </div>
</div>

<script>
    // WebAuthn Helpers
    function base64urlToUint8Array(base64url) {
        const padding = '='.repeat((4 - base64url.length % 4) % 4);
        const base64 = (base64url + padding).replace(/-/g, '+').replace(/_/g, '/');
        const rawData = window.atob(base64);
        return Uint8Array.from([...rawData].map(char => char.charCodeAt(0)));
    }

    function uint8ArrayToBase64url(array) {
        const base64 = btoa(String.fromCharCode(...array));
        return base64.replace(/\+/g, '-').replace(/\//g, '_').replace(/=/g, '');
    }

    async function biometricUnlock() {
        const btn = document.getElementById('btnBiometricUnlock');
        const originalContent = btn.innerHTML;
        btn.disabled = true;
        btn.innerText = 'Authenticating...';

        try {
            // 1. Get options
            const response = await fetch('/WebAuthn/MakeAssertionOptions', { method: 'POST' });
            const options = await response.json();

            if (options.success === false) {
                alert(options.message);
                return;
            }

            // 2. Prepare options
            options.challenge = base64urlToUint8Array(options.challenge);
            if (options.allowCredentials) {
                for (let cred of options.allowCredentials) {
                    cred.id = base64urlToUint8Array(cred.id);
                }
            }

            // 3. Get assertion
            const assertion = await navigator.credentials.get({ publicKey: options });

            // 4. Transform response
            const assertionResponse = {
                id: assertion.id,
                rawId: uint8ArrayToBase64url(new Uint8Array(assertion.rawId)),
                type: assertion.type,
                response: {
                    authenticatorData: uint8ArrayToBase64url(new Uint8Array(assertion.response.authenticatorData)),
                    clientDataJSON: uint8ArrayToBase64url(new Uint8Array(assertion.response.clientDataJSON)),
                    signature: uint8ArrayToBase64url(new Uint8Array(assertion.response.signature)),
                    userHandle: assertion.response.userHandle ? uint8ArrayToBase64url(new Uint8Array(assertion.response.userHandle)) : null
                }
            };

            // 5. Verify on server
            const verifyResponse = await fetch('/WebAuthn/MakeAssertion', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(assertionResponse)
            });

            const result = await verifyResponse.json();
            if (result.success) {
                // Success! Redirect to returnUrl
                window.location.href = '@ViewBag.ReturnUrl' || '/';
            } else {
                alert(result.message);
            }

        } catch (err) {
            console.error(err);
            if (err.name !== 'NotAllowedError') { // Ignore user cancellations
                alert(err.message || 'Biometric authentication failed');
            }
        } finally {
            btn.disabled = false;
            btn.innerHTML = originalContent;
        }
    }

    if (document.getElementById('biometricSection')) {
        const biometricSection = document.getElementById('biometricSection');
        const biometricBtn = document.getElementById('btnBiometricUnlock');
        
        // Show the entire section if device/browser supports WebAuthn
        if (window.PublicKeyCredential) {
            biometricSection.style.display = 'block';
            biometricBtn.addEventListener('click', function() {
                // If the user hasn't registered biometrics yet (according to server)
                if (@(ViewBag.HasBiometrics == true ? "false" : "true")) {
                    alert("Please register biometrics in Security & Profile settings first.");
                } else {
                    biometricUnlock();
                }
            });
        }
    }
</script>

<style>
    .auth-wrapper {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .passkey-input:focus {
        border-color: var(--accent-color) !important;
        box-shadow: 0 0 15px var(--accent-glow) !important;
        background: rgba(0,0,0,0.3) !important;
        outline: none;
    }
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px var(--accent-glow);
    }
    .btn-secondary:hover {
        color: var(--text-primary) !important;
    }
</style>
