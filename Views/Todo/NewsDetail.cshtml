@model TodoListApp.ViewModels.NewsItem
@{
    ViewData["Title"] = Model.Title;
}

<div class="news-detail-page">
    <div class="news-detail-container">
        <!-- Sticky Header Controls -->
        <div class="sticky-controls">
            <a asp-action="Dashboard" class="back-link">
                <span class="back-icon">‚Üê</span> Back to Dashboard
            </a>
            <div class="verified-badge">
                <span class="badge-icon">‚úì</span> Verified Source
            </div>
        </div>

        <!-- Article Header -->
        <header class="article-header-premium">
            <div class="news-tags-row mb-3">
                <span class="insight-badge badge-category">@Model.Category</span>
                <span class="insight-badge badge-location">üìç @(Model.LocationTag ?? "Global")</span>
                <span class="insight-badge badge-sentiment @(Model.Sentiment?.ToLower() ?? "neutral")">
                    <span class="sentiment-dot"></span>
                    @Model.Sentiment
                </span>
            </div>
            
            <div class="article-meta-premium">
                <span class="source-tag">@Model.Source</span>
                <span class="dot-separator">‚Ä¢</span>
                <span class="date-tag">@Model.Published</span>
            </div>
            <h1 class="article-title-premium">@Model.Title</h1>
        </header>

        <!-- No Hero Image for pure Insight Mode -->

        <!-- Article Body -->
        <div class="article-content-modern">
            <div class="content-intro">
                @Model.Description
            </div>
            
            <div class="content-divider"></div>

            <div class="content-extended-note">
                <p>This article summary is served via our authenticated news partner. For the full journalistic coverage, you can visit the original publication.</p>
                <a href="@Model.Link" target="_blank" rel="noopener noreferrer" class="visit-original-btn">
                    Visit Original Publication <span class="ext-icon">‚Üó</span>
                </a>
            </div>
        </div>

        <!-- Footer -->
        <footer class="article-footer-premium">
            <p>¬© @DateTime.Now.Year - News Hub Integration. Content provided by @Model.Source.</p>
        </footer>
    </div>
</div>


