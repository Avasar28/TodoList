@model TodoListApp.Models.ApplicationUser

@{
    ViewData["Title"] = "Edit User";
}

<div class="dashboard-container fade-in" id="editUserContainer">
    <div class="dashboard-header">
        <h1>Edit User</h1>
        <p class="subtitle">Update user details</p>
    </div>

    <div class="auth-card auth-card-wide" style="margin-top: 2rem;">
        <form asp-action="EditUser" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name">Full Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password Change Fields -->
            <div class="form-group" style="margin-top: 1.5rem; border-top: 1px solid rgba(255,255,255,0.1); padding-top: 1rem;">
                <h5 style="margin-bottom: 1rem; color: rgba(255,255,255,0.8); font-size: 1rem;">Change Password (Optional)</h5>
                
                <label for="newPassword">New Password</label>
                <input type="password" name="newPassword" class="form-control" placeholder="Leave blank to keep current" />
                
                <label for="confirmPassword" style="margin-top: 10px;">Confirm New Password</label>
                <input type="password" name="confirmPassword" class="form-control" placeholder="Confirm new password" />
            </div>

            <!-- Passkey Protection Section -->
            <div class="form-section" style="margin-top: 1.5rem; border-top: 1px solid rgba(255,255,255,0.1); padding-top: 1rem;">
                <h5 style="margin-bottom: 1rem; color: rgba(255,255,255,0.8); font-size: 1rem;">Passkey Protection</h5>
                <div class="passkey-controls">
                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" name="isPasskeyEnabled" id="passkeyToggle" @(Model.IsPasskeyEnabled ? "checked" : "") onchange="togglePasskeyFields()">
                        <label class="form-check-label" for="passkeyToggle" style="color: var(--text-secondary); cursor: pointer;">Enable Passkey Protection</label>
                    </div>
                    
                    <div id="passkeyFields" style="display: @(Model.IsPasskeyEnabled ? "grid" : "none"); grid-template-columns: 1fr; gap: 1rem; padding: 1rem; background: rgba(255,255,255,0.05); border-radius: 12px; border: 1px solid var(--glass-border);">
                        <div class="form-group mb-0">
                            <label for="passkeyPin">Update PIN (4 or 6 digits)</label>
                            <input name="passkeyPin" type="password" class="form-control text-center" placeholder="••••" maxlength="6" oninput="this.value = this.value.replace(/[^0-9]/g, '')" />
                            <small class="text-secondary" style="font-size: 0.75rem;">Leave blank to keep existing PIN</small>
                        </div>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn-glow-primary btn-block-glow" style="margin-top: 2rem;">Save Changes</button>
            <a asp-action="UserList" class="btn-outline-unique">Back to List</a>
        </form>
    </div>
</div>

<script>
    function togglePasskeyFields() {
        var isEnabled = document.getElementById("passkeyToggle").checked;
        document.getElementById("passkeyFields").style.display = isEnabled ? "grid" : "none";
    }
</script>
