<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Todo List</title>
    <script src="~/lib/chartjs/chart.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <div class="nav-bar">
            <div class="nav-links">
                <a asp-controller="Todo" asp-action="Dashboard" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")" data-translate="true">Dashboard</a>
                <a asp-controller="Todo" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" data-translate="true">My Tasks</a>
                <a asp-controller="Todo" asp-action="UserList" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "UserList" ? "active" : "")" data-translate="true">User List</a>
            </div>
            <div class="user-info">
                <select id="googleLangSwitcher" class="form-select form-select-sm language-picker" style="display:inline-block; width:auto; margin: 0 10px; border-radius: 12px; cursor: pointer; border: 1px solid rgba(255,255,255,0.2); background: rgba(255,255,255,0.1); color: inherit;">
                    <option value="en">🇺🇸 English</option>
                    <option value="es">🇪🇸 Español</option>
                    <option value="fr">🇫🇷 Français</option>
                    <option value="de">🇩🇪 Deutsch</option>
                    <option value="hi">🇮🇳 Hindi</option>
                    <option value="zh">🇨🇳 Chinese</option>
                    <option value="ja">🇯🇵 Japanese</option>
                    <option value="ru">🇷🇺 Russian</option>
                    <option value="ar">🇸🇦 Arabic</option>
                </select>
                <a href="/Account/Logout" class="logout-link" data-translate="true">Logout</a>
            </div>
        </div>
    }

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <script src="~/js/translation-system.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

