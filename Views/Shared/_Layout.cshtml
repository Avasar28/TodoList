@using Microsoft.AspNetCore.Identity
@using TodoListApp.Models
@using TodoListApp.Services
@inject UserManager<ApplicationUser> UserManager
@inject IFeatureService FeatureService

@{
    var currentUser = await UserManager.GetUserAsync(User);
    var grantedFeatures = currentUser != null 
        ? (await FeatureService.GetUserGrantedFeaturesAsync(currentUser.Id)).Select(f => f.TechnicalName).ToList()
        : new List<string>();
    
    bool HasPage(string technicalName) => grantedFeatures.Contains(technicalName);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Todo List</title>
    <script src="~/lib/chartjs/chart.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/user_list_btns.css" asp-append-version="true" />
</head>
<body>
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <div class="nav-bar">
            <div class="nav-links">
                @if (HasPage("Page_Dashboard"))
                {
                    <a asp-controller="Todo" asp-action="Dashboard" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")" data-translate="true">Dashboard</a>
                }
                @if (HasPage("Page_Tasks"))
                {
                    <a asp-controller="MyTask" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "MyTask" ? "active" : "")" data-translate="true">My Tasks</a>
                }
                @if (HasPage("Page_TimeTracker"))
                {
                    <a asp-controller="TimeTracker" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "TimeTracker" ? "active" : "")" data-translate="true">Time Tracker</a>
                }
                @if (HasPage("Page_UserManagement") && (User.IsInRole("SuperAdmin") || User.IsInRole("Admin") || User.IsInRole("Manager")))
                {
                    <a asp-controller="Todo" asp-action="UserList" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "UserList" ? "active" : "")" data-translate="true">User List</a>
                }
            </div>
            <div class="user-info">
                <select id="googleLangSwitcher" class="form-select form-select-sm language-picker" style="display:inline-block; width:auto; margin: 0 10px; border-radius: 12px; cursor: pointer; border: 1px solid rgba(255,255,255,0.2); background: rgba(255,255,255,0.1); color: inherit;">
                    <option value="en">🇺🇸 English</option>
                    <option value="es">🇪🇸 Español</option>
                    <option value="fr">🇫🇷 Français</option>
                    <option value="de">🇩🇪 Deutsch</option>
                    <option value="hi">🇮🇳 Hindi</option>
                    <option value="zh">🇨🇳 Chinese</option>
                    <option value="ja">🇯🇵 Japanese</option>
                    <option value="ru">🇷🇺 Russian</option>
                    <option value="ar">🇸🇦 Arabic</option>
                    <option value="ja">🇯🇵 Japanese</option>
                    <option value="ru">🇷🇺 Russian</option>
                    <option value="ar">🇸🇦 Arabic</option>
                </select>
                <button id="themeToggleBtn" class="theme-toggle-btn" title="Toggle Theme">🌙</button>
                <a href="/Account/Logout" class="logout-link" data-translate="true">Logout</a>
            </div>
        </div>
    }

    <div class="toast-container" id="toastContainer"></div>
    <div class="main-content-wrapper">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <script>
        function showToast(message, type = 'success') {
            const container = document.getElementById('toastContainer');
            if (!container) return;
            const toast = document.createElement('div');
            toast.className = `toast toast-${type}`;
            toast.innerHTML = `
                <span class="toast-icon">${type === 'success' ? '✅' : '❌'}</span>
                <span class="toast-message">${message}</span>
            `;
            container.appendChild(toast);
            toast.offsetHeight;
            toast.classList.add('show');
            setTimeout(() => {
                toast.classList.remove('show');
                setTimeout(() => toast.remove(), 400);
            }, 3000);
        }
    </script>
    <script src="~/js/translation-system.js" asp-append-version="true"></script>
    <script src="~/js/theme-toggle.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

